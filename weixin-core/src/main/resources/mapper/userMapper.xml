<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cheng.weixin.core.dao.UserDaoMapper">

  <sql id="userColumns">
    u.id,u.username,u.password,u.remarks,u.createDate,u.status
  </sql>

  <!-- 获取用户信息 -->
  <select id="loadAll" resultType="User">
    select
      <include refid="userColumns"/>
    from
      user
    AS u
  </select>
  <!-- 根据用户名获取用户 -->
  <select id="loadUserByUsername" parameterType="String" resultType="User">
    select
      <include refid="userColumns"/>
    from
      user AS u
    WHERE
      username=#{username}
  </select>

</mapper>

